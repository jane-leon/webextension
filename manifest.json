{
  "manifest_version": 3,
  "name": "Netflix Movie Info",
  "version": "1.0",
  "description": "Get IMDb ratings, keywords, and reviews for Netflix movies",
  
  "permissions": [
    "activeTab"
  ],
  
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://www.omdbapi.com/*",
    "https://api.themoviedb.org/*"
  ],
  
  "content_scripts": [{
    "matches": ["https://www.netflix.com/*"],
    "js": ["content.js"],
    "css": ["sidebar.css"]
  }],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Movie Info"
  },
  
  "web_accessible_resources": [{
    "resources": ["sidebar.html"],
    "matches": ["https://www.netflix.com/*"]
  }]
}