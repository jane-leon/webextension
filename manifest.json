{
  "manifest_version": 3,
  "name": "Netflix Web Extension",
  "version": "1.0",
  "description": "Web extension for Chrome that works on Netflix's website to show some info about movies and TV shows that isn't included in Netflix already.",
  "permissions": [
    "activeTab"
  ],

  "icons": {
    "128": "images/logo.png"
  },

  "host_permissions": [
    "https://www.netflix.com/*",
    "https://www.omdbapi.com/*",
    "https://api.themoviedb.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "sidebar.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon":{
      "128": "images/logo.png"
    },
    "default_popup": "popup.html",
    "default_title": "Netflix Movie Info"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html"
      ],
      "matches": [
        "https://www.netflix.com/*"
      ]
    }
  ]
}